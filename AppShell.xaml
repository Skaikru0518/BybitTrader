<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BybitTrader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BybitTrader"
    xmlns:pages="clr-namespace:BybitTrader.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="BybitTrader">
        <TabBar>
            <Tab Title="Dashboard">
                <ShellContent Title="Login" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
            </Tab>
            <!--<Tab Title="Dashboard">
                <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate pages:DashboardPage}" Route="DashboardPage"/>
            </Tab>-->
            <Tab Title="Active Trades">
                <ShellContent Title="Active Trades" ContentTemplate="{DataTemplate pages:ActiveTradesPage}" Route="ActiveTradesPage"/>
            </Tab>
            <Tab Title="Calculators">
                <ShellContent Title="Calculators" ContentTemplate="{DataTemplate pages:CalculatorsPage}" Route="CalculatorsPage" />
            </Tab>
            <Tab Title="Settings">
                <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage"/>
            </Tab>
            <Tab Title="About">
                <ShellContent Title="About" ContentTemplate="{DataTemplate pages:AboutPage}" Route="AboutPage"/>
            </Tab>
        </TabBar>

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
   

</Shell>
